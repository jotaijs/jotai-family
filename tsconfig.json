{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "es5",
    "declaration": true,
    "declarationDir": "./dist/types",
    "emitDeclarationOnly": true,
    "sourceMap": false,
    "rootDir": "src",
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "lib": ["dom", "esnext"],
    "downlevelIteration": true,
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "allowJs": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "baseUrl": ".",
    "paths": {
      "jotai-effect": ["./src"]
    }
  },
  "exclude": ["dist"]
}
